extends layout

block content
  a.btn.btn-warning(role='button' href='/logout') se déconnecter
  br
  form(method="POST")
    input(type='text', name='nom', placeholder='Nom')
    input(type='text', name='prenom', placeholder='Prénom')
    input(type='text', name='anniversaire', value='DD/MM/YYYY')
    input(type='text', name='mail', placeholder='Email')
    input(type='text', name='num', placeholder='Numéro De Téléphone')
    input(type='text', name='place', placeholder='Ville')
    input(type='text', name='arrondissement', placeholder='Arrondissement (pour paris)')
    button.btn.btn-default(type='submit') Envoyer
